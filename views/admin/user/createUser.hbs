{{>sideNavAd}}
<div class="main-content" id="panel">
    {{> navAd}}
    <div class="h1 text-center mt-3 me-3">Thêm tài khoản</div>
    <form method="POST" action="/admin/user/create-user">
        <div class="form-group">
            <label for="inputName" class="form-control-label">Tên đăng nhập</label>
            <input class="form-control" type="text" id="inputName" name="tenDangNhap">
        </div>
        <div class="form-group">
            <label for="inputPass" class="form-control-label">Mật khẩu</label>
            <input class="form-control" type="password" id="inputPass" name="matKhau">
        </div>
        <div class="form-group">
            <label for="inputNameAc" class="form-control-label">Tên thành viên</label>
            <input class="form-control" type="text" id="inputNameAc" name="tenTK">
        </div>
        <div class="form-group">
            <label for="inputPhone" class="form-control-label">Số điện thoại</label>
            <input class="form-control" type="tel" id="inputPhone" name="soDienThoai">
        </div>
        <div class="form-group">
            <label for="inputEmail" class="form-control-label">Email</label>
            <input class="form-control" type="email" id="inputEmail" name="email">
        </div>
        <div class="form-group">
            <label for="inputAddress" class="form-control-label">Địa chỉ</label>
            <input class="form-control" type="text" id="inputAddress" name="diaChi">
        </div>
        
        <div class="form-group text-center">
            <button type="submit" class="btn btn-outline-primary" >Thêm mới</button>
            <button type="button" class="btn btn-outline-danger" onclick="goBack()">Hủy bỏ</button>
        </div>
    </form>
</div>
<script>
    function goBack() {
    window.history.back();
    }
</script>