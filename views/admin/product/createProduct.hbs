{{>sideNavAd}}
<div class="main-content" id="panel">
    {{> navAd}}
    <div class="h1 text-center mt-3 me-3">Thêm sản phẩm</div>
    <form method="POST" action="/admin/product/create-product">
        <div class="form-group">
            <label for="inputName" class="form-control-label">Tên</label>
            <input class="form-control" type="text" id="inputName" name="ten">
        </div>
        <div class="form-group">
            <label for="inputImage" class="form-control-label">Ảnh</label>
            <input class="form-control" type="text" id="inputImage" name="anh">
        </div>
        <div class="row row-cols-2">
            <div class="form-group col">
                <label for="inputCost" class="form-control-label">Giá</label>
                <input class="form-control" type="text" id="inputCost" name="gia">
            </div>
            <div class="form-group col">
                <label for="number-input" class="form-control-label">Lượng có</label>
                <input class="form-control" type="number" value="1" id="number-input" name="luongCo">
            </div>
            <div class="form-group col">
                <label for="color-input" class="form-control-label">Màu sắc</label>
                <input class="form-control" type="text"  id="color-input" name="mauSac">
            </div>
            <div class="form-group col">
                <label for="size-input" class="form-control-label">Kích thước</label>
                <input class="form-control" type="text"  id="size-input" name="kichThuoc">
            </div>
        </div>
        <div class="form-group">
            <label class="form-control-label">Danh mục</label>
            <select class="form-control" required name="slugDm">
                <option>--- Chọn danh mục ---</option>
                {{#each categories}}
                    <option value="{{this.slug}}">{{this.tenDm}}</option>
                {{/each}}
            </select>        
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-outline-primary" >Thêm mới</button>
            <button type="button" class="btn btn-outline-danger" onclick="goBack()">Hủy bỏ</button>
        </div>
    </form>
</div>
<script>
    function goBack() {
    window.history.back();
    }
</script>