{{>sideNavAd}}
<div class="main-content" id="panel">
    {{> navAd}}
    <div class="h1 text-center mt-3 me-3">Chỉnh sửa sản phẩm</div>
    <form method="POST" action="/admin/product/edit/{{product.slug}}?_method=PUT">
        <div class="form-group">
            <label for="inputName" class="form-control-label">Tên</label>
            <input class="form-control" type="text" id="inputName" name="ten" value="{{product.ten}}">
        </div>
        <div class="form-group">
            <label for="inputImage" class="form-control-label">Ảnh</label>
            <input class="form-control" type="text" id="inputImage" value="{{product.anh}}" name="anh">
        </div>
        <div class="row row-cols-2">
            <div class="form-group col">
                <label for="inputCost" class="form-control-label">Giá</label>
                <input class="form-control" type="text" id="inputCost" value="{{product.gia}}" name="gia">
            </div>
            <div class="form-group col">
                <label for="number-input" class="form-control-label">Lượng có</label>
                <input class="form-control" type="number" id="number-input" value="{{product.luongCo}}" name="luongCo">
            </div>
            <div class="form-group col">
                <label for="color-input" class="form-control-label">Màu sắc</label>
                <input class="form-control" type="text"  id="color-input" value="{{product.mauSac}}" name="mauSac">
            </div>
            <div class="form-group col">
                <label for="size-input" class="form-control-label">Kích thước</label>
                <input class="form-control" type="text"  id="size-input" value="{{product.kichThuoc}}" name="kichThuoc">
            </div>
        </div>
        <div class="form-group">
            <label class="form-control-label category" data-selected="{{product.slugDm}}">Danh mục</label>
            <select class="form-control" required name="tenDm" required>
                <option value="">--- Chọn danh mục ---</option>
                {{#each categories}}
                    <option value="{{this.slug}}">{{this.tenDm}}</option>
                {{/each}}
            </select>        
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-outline-primary" >Chỉnh sửa</button>
            <button type="button" class="btn btn-outline-danger" onclick="goBack()">Hủy bỏ</button>
        </div>
    </form>
</div>
<script>
    function goBack() {
    window.history.back();
    }
    $(function(){
        const selected = $('.category').data('selected');
        $('select').val(selected);
    })
</script>