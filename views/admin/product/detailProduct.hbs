{{>sideNavAd}}
<div class="main-content" id="panel">
    {{> navAd}}
    <div class="h1 text-center mt-3">Chi tiết sản phẩm</div>
        <div class="row row-cols-md-2">
            <div class="form-group col">
            <label for="inputName" class="form-control-label">Tên</label>
            <input class="form-control" type="text" id="inputName" name="ten" value="{{product.ten}}" readonly>
        </div>
        
        <div class="form-group col">
            <label for="categry-input" class="form-control-label">Danh mục</label>
            <input class="form-control" type="text"  id="categry-input" value="{{category.tenDm}}" name="tenDm" readonly>
        </div>
        </div>
        <div class="form-group">
            <label for="inputImage" class="form-control-label">Ảnh</label>
            <input class="form-control" type="text" id="inputImage" value="{{product.anh}}" name="anh" readonly>
        </div>
        <div class="row row-cols-md-2">
            <div class="form-group col">
                <label for="inputCost" class="form-control-label">Giá</label>
                <input class="form-control" type="text" id="inputCost" value="{{product.gia}}" name="gia" readonly>
            </div>
            <div class="form-group col">
                <label for="number-input" class="form-control-label">Lượng có</label>
                <input class="form-control" type="number" id="number-input" value="{{product.luongCo}}" name="luongCo" readonly>
            </div>
            <div class="form-group col">
                <label for="color-input" class="form-control-label">Màu sắc</label>
                <input class="form-control" type="text"  id="color-input" value="{{product.mauSac}}" name="mauSac" readonly>
            </div>
            <div class="form-group col">
                <label for="size-input" class="form-control-label">Kích thước</label>
                <input class="form-control" type="text"  id="size-input" value="{{product.kichThuoc}}" name="kichThuoc" readonly>
            </div>
        </div>
        <div class="form-group text-center">
            <a href="/admin/product/edit/{{product.slug}}" class="btn btn-outline-primary" >Chỉnh sửa</a>
            <a href="/admin/product/delete/{{product.slug}}" class="btn btn-outline-danger">Xóa</a>
        </div>
</div>